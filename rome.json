{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noDelete": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    },
    "ignore": ["__tests__/**/*.snap"]
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120,
    "ignore": ["__tests__/**/*.snap"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
