{
	"manifest_version": 2,
	"name": "twitter画像原寸ボタン",
	"version": "2.0",
	"description": "twitterのツイート詳細画面にボタンを追加する拡張機能。追加されたボタンかEnterキーを押すとtwitterの画像の原寸を新しいタブで表示する。連絡は@hogextendまで。(「twitter画像原寸表示」から「twitter画像原寸ボタン」に改名しました！)",
	"icons": {
		"16": "icons/icon.png",
		"48": "icons/icon.png",
		"128": "icons/icon.png"
	},
	"content_scripts": [
		{
			"matches": ["https://twitter.com/*"],
			"js": ["js/main.js"]
		}
	],
	"background" : {
		"scripts" : ["js/background.js"]
	},
	"browser_action": {
		"default_icon": "icons/icon.png",
		"default_title": "twitter画像原寸ボタン",
		"default_popup": "html/popup.html"
	},
	"options_page": "html/popup.html"
}

