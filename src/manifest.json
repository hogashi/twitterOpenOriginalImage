{
	"manifest_version": 2,
	"name": "twitter画像原寸ボタン",
	"version": "2.1",
	"description": "twitterの画像ツイートにボタンを追加する拡張機能。追加されたボタンを押すとツイートの画像を原寸で新しいタブに表示する。連絡は@hogextendまで。(「twitter画像原寸表示」から「twitter画像原寸ボタン」に改名しました！)",
	"author": "hogashi",
	"permissions": [
		"tabs"
	],
	"icons": {
		"16": "icons/icon.png",
		"48": "icons/icon.png",
		"128": "icons/icon.png"
	},
	"content_scripts": [
		{
			"matches": ["https://twitter.com/*"],
			"js": ["js/main.js"]
		},
		{
			"matches": ["https://tweetdeck.twitter.com/*"],
			"js": ["js/tooitweetdeck.js"]
		},
		{
			"matches": ["https://pbs.twimg.com/*"],
			"js": ["js/imagetab.js"]
		}
	],
	"background" : {
		"scripts" : ["js/background.js"]
	},
	"browser_action": {
		"default_icon": "icons/icon.png",
		"default_title": "twitter画像原寸ボタン",
		"default_popup": "html/popup.html"
	},
	"options_page": "html/popup.html"
}

