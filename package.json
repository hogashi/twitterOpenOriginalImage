{
  "name": "twitter-open-original-image",
  "description": "opens images in original size at twitter",
  "repository": "git@github.com:hogashi/twitterOpenOriginalImage.git",
  "author": "hogashi <azuma.ginkakuji@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "run-s build:js build:userjs",
    "build:js": "webpack --version && webpack --mode production",
    "build-dev": "run-s build-dev:js build:userjs",
    "build-dev:js": "webpack --version && webpack --mode development",
    "build:userjs": "./scripts/make_user_script.sh",
    "lint": "run-s lint:prettier lint:eslint",
    "lint:eslint": "eslint --version && eslint src __tests__ --ext ts --ext tsx --ext js",
    "lint:prettier": "prettier --version && prettier --write 'src/**/*.ts{,x}' '__tests__/**/*.js'",
    "jest": "jest --version && jest --verbose --testEnvironment=jsdom --coverage",
    "coverage": "make-coverage-badge",
    "test": "run-s lint:eslint test:ts jest coverage",
    "test:ts": "tsc --noEmit",
    "compress": "zip -r dist.zip dist",
    "compress:edge": "run-s edit-manifest-edge compress restore-manifest-edge",
    "edit-manifest-edge": "sed -i.bak 's/\\(options_page.*\\)$/\\1, \"update_URL\": \"https:\\/\\/edge.microsoft.com\\/extensionwebstorebase\\/v1\\/crx\"/' dist/manifest.json",
    "restore-manifest-edge": "mv -f dist/manifest.json{.bak,}"
  },
  "devDependencies": {
    "@babel/cli": "7.16.8",
    "@babel/core": "7.16.7",
    "@babel/preset-env": "7.16.8",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@tsconfig/node14": "1.0.1",
    "@types/chrome": "0.0.176",
    "@types/filesystem": "0.0.32",
    "@types/jest": "27.4.0",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/react-test-renderer": "17.0.1",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "babel-loader": "8.2.3",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "25.7.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.28.0",
    "jest": "27.4.7",
    "make-coverage-badge": "1.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "react-test-renderer": "17.0.2",
    "typescript": "4.5.4",
    "webpack": "5.66.0",
    "webpack-cli": "4.9.1"
  },
  "dependencies": {
    "@babel/polyfill": "7.12.1",
    "@babel/runtime": "7.16.7",
    "@material-ui/core": "4.12.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text"
    ]
  }
}
